# i3blocks configuration file
# Each block has: label, command, interval, and optional color settings

###############################################################################
# CPU Temperature
###############################################################################
[temp]
label=üå°Ô∏è
command=sensors | awk '/Package id 0:/ {print $4}'
interval=5
color=#61AFEF   

###############################################################################
# Disk Usage (/)
###############################################################################
[disk_root]
label=üñ¥ Disk:
command=df -h / | awk 'NR==2 {print $4 " free"}'
interval=30
color=#61AFEF

###############################################################################
# CPU Usage
###############################################################################
[cpu_usage]
label=üñ•Ô∏è CPU:
command=grep 'cpu ' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {printf "%.1f%%", usage}'
interval=5
color=#61AFEF

###############################################################################
# Memory Usage
###############################################################################
[memory]
label=üß† Mem:
command=free -h | awk '/Mem:/ {print $3 "/" $2}'
interval=5
color=#61AFEF

###############################################################################
# Wireless Network
###############################################################################
[wireless]
label=üì∂
command=iwgetid -r && grep wlan0 /proc/net/wireless | awk '{print int($3 * 100 / 70) "%"}'
interval=10
color=#61AFEF

###############################################################################
# Battery
###############################################################################
[battery]
label=üîã
command=acpi -b | awk -F', ' '{print  $2}'
interval=30
color=#61AFEF

###############################################################################
# Volume (PulseAudio)
###############################################################################
[volume]
label=üîâ
command=pactl get-sink-volume @DEFAULT_SINK@ | awk 'NR==1 {print $5}'
interval=5
color=#61AFEF

###############################################################################
# Date & Time
###############################################################################
[time]
label=üìÖ
command=date '+%Y-%m-%d üïí %H:%M'
interval=60
color=#61AFEF
